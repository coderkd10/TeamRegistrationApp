<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    tools:context="com.ashish.cop290assign0.WelcomeActivity">

    <View
        android:id="@+id/centered_view"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:id="@+id/icon_layout_main"
        android:layout_above="@id/centered_view"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/icon_layout"
            android:clickable="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/red_button_backg"/>
        <ImageView
            android:id="@+id/icon"
            android:src="@drawable/ic_group_add_white_48dp"
            android:tint="#fff"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/centered_view"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/title_text"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/red_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:text="COP290 Team registration"
                android:textSize="16sp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/title_text"
            android:layout_marginLeft="-70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:clickable="true"
                android:onClick="proceed"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/red_button_backg"/>
            <ImageView
                android:src="@drawable/ic_action_forward"
                android:tint="#fff"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
