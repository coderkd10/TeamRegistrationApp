<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.ashish.cop290assign0.CreditsActivity">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/member_text"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/red_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="Credits"
                android:textSize="18sp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:clickable="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_btn"/>
            <TextView
                android:id="@+id/member_no"
                android:text="#"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/controls_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:clickable="true"
                    android:onClick="exit"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/red_button_backg"/>
                <ImageView
                    android:src="@drawable/ic_clear_white_48dp"
                    android:tint="#fff"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <TextView
                android:textColor="@color/themeColor"
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:clickable="true"
                    android:onClick="openForm"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/red_button_backg"/>
                <ImageView
                    android:src="@drawable/ic_refresh_white_48dp"
                    android:tint="#fff"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
            <TextView
                android:textColor="@color/themeColor"
                android:text="Fill another form"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/title"
        android:text="Made with \u2764 by"
        android:textColor="#727272"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@id/controls_layout"
        android:background="#f5f5f5"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/student1_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img1"
                android:src="@drawable/image_a_kedia"
                app:siBorderWidth="1dp"
                app:siBorderColor="#f5f5f5"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/detail1"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:text="Abhishek Kedia"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/kedia_github"
                android:clickable="true"
                android:onClick="handleLinks"
                android:src="@drawable/github"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/kedia_twiiter"
                android:clickable="true"
                android:onClick="handleLinks"
                android:src="@drawable/twitter"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/student2_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img2"
                android:src="@drawable/image_a_ranjan"
                app:siBorderWidth="1dp"
                app:siBorderColor="#f5f5f5"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/detail2"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:text="Ashish Ranjan"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ashish_github"
                android:clickable="true"
                android:onClick="handleLinks"
                android:src="@drawable/github"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/ashish_twiiter"
                android:clickable="true"
                android:onClick="handleLinks"
                android:src="@drawable/twitter"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/student3_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img3"
                android:src="@drawable/image_a_kansal"
                app:siBorderWidth="1dp"
                app:siBorderColor="#f5f5f5"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/detail3"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:text="Arnav Kansal"
                android:layout_width="140dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/arnav_github"
                android:clickable="true"
                android:onClick="handleLinks"
                android:src="@drawable/github"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/arnav_twiiter"
                android:clickable="true"
                android:onClick="handleLinks"
                android:src="@drawable/twitter"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
